<form id="signupForm" class="form-signup">
  <h2 class="form-signup-heading">Регистрация</h2>

  <label for="inputUsername" class="sr-only">Логин</label>
  <input type="text" id="inputUsername" class="form-control" placeholder="Логин" data-toggle="popover" data-trigger="focus">

  <label for="inputPassword" class="sr-only">Пароль</label>
  <input type="password" id="inputPassword" class="form-control" placeholder="Пароль" data-toggle="popover" data-trigger="focus">
  <label for="inputPassword" class="sr-only">Повторите пароль</label>
  <input type="password" id="inputPasswordRepeat" class="form-control" placeholder="Повторите пароль" data-toggle="popover" data-trigger="focus">

  <label for="inputEmail" class="sr-only">Почта</label>
  <input type="email" id="inputEmail" class="form-control" placeholder="Почта" data-toggle="popover" data-trigger="focus">

  <button id="signupButton" class="btn btn-lg btn-primary btn-block" type="submit">Продолжить</button>

  <div class="alert alert-warning fade show" id="signupAlert" role="alert">
    <span id="signupAlertText"></span>
  </div>
</form>

<script src="/javascripts/signup.js"></script>