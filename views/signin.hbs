<form id="signinForm" class="form-signin">

  <h2 class="form-signin-heading">Вход</h2>
  <label for="inputUsername" class="sr-only">Логин</label>
  <input type="text" id="inputUsername" class="form-control" placeholder="Логин" required autofocus>
  <label for="inputPassword" class="sr-only">Пароль</label>
  <input type="password" id="inputPassword" class="form-control" placeholder="Пароль" required>
  <button id="signinButton" class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>


  <div class="row mt-1">
    <div class="col pr-0">
      <a class="btn btn-outline-primary btn-block" href="/auth/vkontakte" role="button">Вконтакте</a>
    </div>
    <div class="col pl-1">
      <a class="btn btn-outline-primary btn-block" href="/auth/google" role="button">Google</a>
    </div>
  </div>


  <div class="alert alert-warning fade show" id="signinAlert" role="alert">
    <span id="signinAlertText"></span>
  </div>
</form>

<script src="/javascripts/signin.js"></script>