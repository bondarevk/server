{{#if user}}
  <div class="user-header">
    <h1 class="display-4">{{user.username}}</h1>
  </div>
  <div class="user-info">
    <div class="form-group row">
      {{#if user.local}}
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <p class="form-control-static">{{user.local.email}}</p>
        </div>
      {{/if}}
      <label class="col-sm-2 col-form-label">Дата регистрации</label>
      <div class="col-sm-10">
        <p class="form-control-static">{{regDate}}</p>
      </div>
    </div>
  </div>
{{else}}
  <h1 class="display-4 text-center">Пользователь не найден</h1>
{{/if}}